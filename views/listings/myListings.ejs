<% layout('/layouts/boilerplate') %>
<div class="container" style="margin-top: 50px;">
  <h2 class="mb-3">My Listings</h2>

  <% if (myListings.length === 0) { %>
    <p>You havenâ€™t created any listings yet.</p>
  <% } else { %>
    <div class="row">
      <% myListings.forEach(listing => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if (listing.images.length > 0) { %>
              <img src="<%= listing.images[0].url %>" class="card-img-top h-50" alt="<%= listing.title %>">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description.substring(0, 80) %>...</p>
              <a href="/listings/<%= listing._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>


